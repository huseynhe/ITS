@model ITS.UI.ModelViews.MachineVM
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "";
}




<div class="col-sm-1 col-sm-offset-11" style="position: absolute;">
    <span class="label label-danger pull-right badgemargin">@Model.ListCount</span>
</div>

<table class="table table-bordered">
    <tbody>
        @foreach (var item in Model.RMachineList)
        {
        <tr>
            <td class="col-md-1">
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td class="col-md-2">
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td class="col-md-2">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td class="col-md-1" align="center">
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td class="col-md-1">
                @Html.DisplayFor(modelItem => item.MachineGroupDesc)
            </td>
            <td class="col-md-1">
                @Html.DisplayFor(modelItem => item.BusinessCenterDesc)
            </td>
            <td class="col-md-2">
                @Html.DisplayFor(modelItem => item.ResponsiblePersonSAA)
            </td>
            <td class="col-md-1 shsingle text-center" style="font-size:16px;">
                <a class="btn btn-xs" title="Redaktə et" href="@Url.Action("Edit","Machine", new { id = item.ID})"><span class="fa fa-pencil"></span></a>
                <span title="Sil"> @Html.ActionLink(" ", "Delete", "Machine", new { id = item.ID }, new { @onclick = "return confirm('Silmək istədiyinizə əminsinizmi?.');", @class = "btn btn-xs glyphicon glyphicon-trash" })</span>
            </td>

        </tr>
        }
    </tbody>
</table>


<div class="box-footer clearfix">
    Səhifə @(Model.Paging.PageCount < Model.Paging.PageNumber ? 0 : Model.Paging.PageNumber) (cəmi @Model.Paging.PageCount)
    @Html.PagedListPager(Model.Paging, page => Url.Action("Index", new { page }))
</div>






